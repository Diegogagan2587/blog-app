
<div class="posts-section">
 <%= render partial: 'users/user_card', locals: {user: @user} %>
 <ul class="post-list">
    <% @posts.each_with_index do |post, i| %>
     <li >
       <ul>
         <li>
          <a href="<%=user_post_path(post.author, post)%>"  >
             <%= render partial: 'posts/post_card', locals: {post: post, post_number: @posts.length - i} %> 
          </a>
         </li>
         <li>
             <%= render partial: 'application/comments_box', locals: { comments: post.five_recent_comments  }%>
         </li>
        </ul>
     </li>
    <% end %>
 </ul>
 <div class="pagination">
   <button class="button">
   <a href="<%=user_path(@user)%>">Back to profile</a>
   </button>
 <%= paginate @posts %>
   <button class="button">
   <a href="<%=new_user_post_path(@user)%>">New post</a>
   </button>
 </div>
</div>