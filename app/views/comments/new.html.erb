<h1>Submmit your comment bellow
  <h1>
    <%= form_with model: comment, url: user_post_comments_path, method: :post, local: true, scope: :comment do |form|  %>
      <%= form.label :text %>
      <%= form.text_area :text %>
      <%= form.submit "Submit comment" %>
      <button>
        <%= link_to "Cancel", user_posts_url(user_id: params[:user_id], id: params[:id]) %>
      </button>
    <% end %>
